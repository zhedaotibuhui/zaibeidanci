.plan-block{
    /* background: rgb(255, 234, 234); */
    width: 100%;
    padding-left: 30rpx;
    padding-bottom: 60rpx;
    padding-top: 30rpx;
    background: white;
}

.books-block{
    margin-top: 40rpx;
    width: 90%;
}

.plan-guide-text-left{
    font-size: 45rpx;
    color: #505050;
}

.plan-guide-text-right{

    padding: 5rpx 10rpx 5rpx 10rpx;
    border-radius: 15rpx;
    font-size: 28rpx;
    background: rgb(37, 209, 157);
    color: white;
}

.currBook{
    margin-top: 20rpx;
    padding-left: 30rpx;
}

.books-guide{
    margin-top: 60rpx;
    display: block;
    overflow: hidden;
}

.books-guide-text{
    color: #333333;
    font-size: 45rpx;
    float: left;
}

.books-add-button{
    padding: 2rpx 15rpx 2rpx 15rpx;
    float: right;
    font-size: 28rpx;
    border: solid;
    border-radius: 18%/50%;
    border-width: 2rpx;
    border-color: rgb(34, 196, 120);
    color: rgb(42, 189, 133);
    font-weight: bold;
}

.books-container{
    display: block;
    margin-top: 25rpx;
    overflow: hidden;
    background: white;
    padding: 30rpx;
    border-radius: 20rpx;
}

.books-image-container{
    float: left;
    height: 198rpx;
    width: 144rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.books-image{
    height: 100%;
    width: 100%;
}

.books-info-container{
    float: left;

    width: 450rpx;
}

.books-name-text{
    font-size: 35rpx;
    color: #333333;
}

.books-progress-text{
    margin-top:10rpx;
    font-size: 28rpx;
    color: #c8c8c8;
}

.books-info-bottom{
    margin-top: 100rpx;
    margin-left: 30rpx;
}

.books-delete-icon-container{
    margin-left: 10rpx;
    width: 40rpx;
    height: 40rpx;
    float: left;
}

.books-delete-icon{
    width: 100%;
    height: 100%;
}

.books-cell{
    margin-top: 40rpx;
}

.books-select-button{
    /* float:right; */
    height: 45rpx;
    line-height: 45rpx;
    font-size: 25rpx;
    font-weight: bold;
    color: rgb(45, 204, 130);
    background: #c7fce4;
    border-radius: 25%/50%;
    padding: 0 20rpx 0 20rpx;
    float: right;
}
.a{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 10px 0;
}