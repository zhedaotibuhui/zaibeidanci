.dictionary-container{
    /* background: rgb(255, 218, 218); */
    padding: 20rpx 30rpx 50rpx 40rpx;
    border-bottom: solid;
    border-width: 6rpx;
    border-color: rgb(236, 236, 236);
}

.text-title{
    /* background: rgb(249, 255, 198); */
    display: block;
    font-size: 30rpx;
    color: #18bd99;
    font-weight: bold;
    margin-top: 30rpx;
}

.text-content{
    /* background: rgb(189, 245, 255); */
    font-size: 31rpx;
    display: block;
    margin-top: 20rpx;
    margin-right: 70rpx;
    color: rgb(47, 47, 47);
    overflow: hidden;
}

.text-content-sentence-word, .text-content-sentence-word-selected, .text-content-sentence-word-major{
  float: left;
}

.text-content-sentence-word-selected{
  color: rgb(255, 255, 255);
  font-weight: bold;
  background: rgb(35, 192, 158);
}

.text-content-sentence-word-major{
  color: rgb(35, 192, 158);
  font-weight: bold;
}

.button-next{
    width: 86%;
    text-align: center;
    border-radius: 5.5%  / 50% ;
    line-height: 80rpx;
    color: white;
    font-size: 30rpx;
    position: fixed;
    bottom: 5%;
    left: 7%;
    background:#18bd99;
}