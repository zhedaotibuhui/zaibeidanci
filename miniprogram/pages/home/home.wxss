/* pages/home/home.wxss *//* pages/home/home.wxss */
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo{
  display: flex;
  flex-direction: row;
  align-items: baseline ;
}

.userinfo-avatar{
  width: 120rpx;
  height: 120rpx;
  margin: 12rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.top-view{
  background-color: #01ccb6;
  color:white;
  padding: 37rpx;
}

.top-view .user{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.top-view .user .row{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.top-view .user .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.top-view .user .name{
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  width: 200rpx;
}

.top-view .site{
  background-color: rgba(0, 0, 0, 0.16);
  padding: 20rpx;
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  border-top-right-radius: 32.rpx;
}

.numbers{
  display:flex;
  flex-direction: column;
  padding: 35rpx;
  justify-content: space-around;
  align-items: flex-start;
}

/* task */

.task-container{
  /* background: rgb(255, 190, 190); */
  width: 90%;
  margin-top: 30rpx;
}

.task-guide-text{
  display: block;
  text-align: center;
  font-size: 27rpx;
  color: #bbc1bf;
}

.task-info{
  margin-top: 20rpx;
}

.task-info-trisection{
  /* background: rgb(165, 255, 165); */
  width: 50%;
  float: left;
  text-align: center;
}

.task-info-trisection-top-text{
  font-size: 55rpx;
  display: block;
  /* background: #7ac5d8; */
  height: 70rpx;
  line-height: 70rpx;
  color: #333333;
  
}  

.task-info-trisection-bottom-text{
  font-size: 27rpx;
  color: #333333;
}

.divLine{
  margin-top: 20rpx ;
  background: #d7dad5;
  width: 95%;
  height: 5rpx;
  margin-left: 20rpx;
 }

.options-block{
  margin-top: 10rpx;
  /* background: rgb(255, 189, 189); */
  width: 85%;
  padding-left: 40rpx;
}

.option{
  /* background: rgb(144, 250, 144); */
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  height: 90rpx;
}

.option-text{
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 20rpx;
  color: #666666;
}

.option-icon-container{
  height: 60rpx;
  width: 60rpx;
  float: left;
  margin-top: 5rpx;
  margin-left: 20rpx;
}

.option-icon-right-container{
  float: right;
  margin-top: 10rpx;
  height: 50rpx;
  width: 50rpx;
  /* background: red; */
}

.option-icon{
  position: relative;
  height: 60rpx;
  width: 60rpx;
}

.option-icon-right{
  position: relative;
  top: -10%;
  left: 40%;
  height: 50%;
  width: 50%;
}