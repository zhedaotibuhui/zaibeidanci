.a {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #00000075;
}

.b {
    position: absolute;
    bottom: 0;
    width: calc(100% - 40px);
    padding: 20px 20px 0;
    height: 0;
    background-color: #ffffff;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}



.d {
    height: 100%;
}